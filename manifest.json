{
  "manifest_version":2,
  "name": "Lovelist Auto-Lover",
  "description":"Automagically love items for you.",
  "version":"1.0",
  "options_ui":
  {
    "page":"html/options.html",
    "chrome_style":true //false -> open in own tab; true -> open in overlay
    
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "iconzz":        "img/PinkHeart.png",
    "default_icon":  "img/WhiteHeart.png", 
    "default_popup": "html/popup.html",
    "default_title": "AutoMagic Love"
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "activeTab",
    "cookies",
    "https://*.victoriassecret.com/*",
    "https://*.lbidts.com/*"
  ],
  "icons":{
    "16": "img/WhiteHeart.png",
    "48": "img/PinkHeart48.png",
    "128":"img/PinkHeart128.png"
  }
}

