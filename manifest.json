{
  "manifest_version":2,
  "name": "Lovelist Auto-Lover",
  "description":"Automagically love items for you.",
  "version":"1.0",
  "options_ui":
  {
    "page":"options.html",
    "chrome_style":true //false -> open in own tab; true -> open in overlay
    
  },
  
  "browser_action": {
    "old_default_icon": "125px-KarakoyunluFlag.png",
    "oldIcon":"icon.png",
    "iconzz":"PinkHeart.png",
    "default_icon": "WhiteHeart.png", 
    "default_popup": "popup.html",
    "default_title": "AutoMagic Love"
  }
  ,
    "permissions": [	
	"activeTab",
	"cookies",
	"http://*/*",
	"https://*/*",
// can I get rid of the above two permission urls?
        "https://*.victoriassecret.com/*",
	"https://localhost*",
     "https://*.lbidts.com/*"
  ]
}

